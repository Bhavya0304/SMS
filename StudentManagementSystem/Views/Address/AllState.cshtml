@model List<StudentManagementSystem.Models.Context.State>
@{
    ViewBag.Title = "AllStates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <a href="/Address/AddState" class="btn btn-outline-success my-4">Add State</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>State Name</th>
                <th>Country Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.StateName</td>
                    <td>@item.Country.CountryName</td>
                    <td><a class="btn btn-outline-warning mx-2" href="/Address/EditState/@item.Id">Edit</a><a class="btn btn-outline-danger mx-2" href="/Address/DeleteState/@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    @if (!Model.Any())
    {
        <h4 class="text-center">No Data to show!</h4>
    }
</div>

