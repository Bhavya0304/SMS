@model List<StudentManagementSystem.Models.Context.Subject>
@{
    ViewBag.Title = "AllSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <a href="/Teacher/AddSubject" class="btn btn-outline-success my-4">Add Subject</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.SubjectName</td>
                    <td><a class="btn btn-outline-warning mx-2" href="/Teacher/EditSubject/@item.Id">Edit</a><a class="btn btn-outline-danger mx-2" href="/Teacher/DeleteSubject/@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    @if (!Model.Any())
    {
        <h4 class="text-center">No Data to show!</h4>
    }
</div>


